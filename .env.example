# =============================================================================
# 基础配置 (Basic Configuration)
# =============================================================================
# 项目名称
PROJECT_NAME="AI Voice Solution"
# 本项目后端接口的前缀
API_V1_STR="/api/v1"

# =============================================================================
# 区域与线路配置 (Region & Endpoint Configuration)
# =============================================================================
# 是否使用国际版 API 线路
# true: 优先使用 _GLOBAL 后缀的 Base URL (适用于海外服务器或国际业务)
# false: 使用默认的国内/本地 Base URL (适用于国内服务器)
USE_GLOBAL_ENDPOINTS=false

# =============================================================================
# 数据库配置 (Database Configuration)
# =============================================================================
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=audio_ai

# =============================================================================
# 缓存配置 (Redis Configuration)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# 功能开关 (Feature Flags)
# =============================================================================
RAG_ENABLE=True
MEMORY_ENABLE=True

# =============================================================================
# 大模型策略配置 (LLM Strategy Configuration)
# =============================================================================
# 默认使用的 LLM 提供商
# 可选值: openai, azure, qwen, minimax, deepseek, zhipu, qianfan, google, spark
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-3.5-turbo

# --- 场景化模型覆盖 (可选) ---
INSTRUCTION_LLM_PROVIDER=openai
INSTRUCTION_LLM_MODEL=gpt-3.5-turbo

RAG_LLM_PROVIDER=openai
RAG_LLM_MODEL=gpt-4

CHAT_LLM_PROVIDER=openai
CHAT_LLM_MODEL=gpt-3.5-turbo

# =============================================================================
# 大模型厂商配置 (LLM Provider Configurations)
# =============================================================================
# 说明：
# 系统会根据 USE_GLOBAL_ENDPOINTS 的值自动选择 Base URL：
# - false (默认): 使用 XXX_API_BASE
# - true: 使用 XXX_API_BASE_GLOBAL
#
# 对于不区分国内外的厂商，两个配置项的值保持一致即可。

# --- 1. OpenAI ---
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# 默认/国内代理地址
OPENAI_API_BASE=https://api.openai.com/v1
# 国际版地址 (通常一致，除非您有不同的代理策略)
OPENAI_API_BASE_GLOBAL=https://api.openai.com/v1

# --- 2. Azure OpenAI ---
AZURE_OPENAI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_DEPLOYMENT_NAME=your-deployment-name
# 中国版 (世纪互联)
AZURE_OPENAI_API_BASE=https://your-resource-cn.openai.azure.cn/
# 国际版
AZURE_OPENAI_API_BASE_GLOBAL=https://your-resource-global.openai.azure.com/

# --- 3. Qwen (通义千问) ---
QWEN_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# 国内版
QWEN_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
# 国际版
QWEN_API_BASE_GLOBAL=https://dashscope-intl.aliyuncs.com/compatible-mode/v1

# --- 4. Minimax (海螺) ---
MINIMAX_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MINIMAX_GROUP_ID=xxxxxxxxxxxxxxxx
# 国内版
MINIMAX_API_BASE=https://api.minimax.chat/v1
# 国际版
MINIMAX_API_BASE_GLOBAL=https://api.minimax.io/v1

# --- 5. Deepseek (深度求索) ---
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# 全球统一
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_API_BASE_GLOBAL=https://api.deepseek.com

# --- 6. Zhipu AI (智谱 GLM) ---
ZHIPUAI_API_KEY=xxxxxxxxxxxxxxxx.xxxxxxxxxxxxxxxx
# 国内统一
ZHIPUAI_API_BASE=https://open.bigmodel.cn/api/paas/v4
ZHIPUAI_API_BASE_GLOBAL=https://open.bigmodel.cn/api/paas/v4

# --- 7. Baidu Qianfan (百度文心一言) ---
QIANFAN_AK=xxxxxxxxxxxxxxxxxxxxxxxx
QIANFAN_SK=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# 通常为空，除非私有化部署
QIANFAN_API_BASE=
QIANFAN_API_BASE_GLOBAL=

# --- 8. Google Gemini ---
GOOGLE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_API_BASE=
GOOGLE_API_BASE_GLOBAL=

# --- 9. Xunfei Spark (讯飞星火) ---
SPARK_APP_ID=xxxxxxxx
SPARK_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SPARK_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# V3.5 地址
SPARK_API_BASE=wss://spark-api.xf-yun.com/v3.5/chat
SPARK_API_BASE_GLOBAL=wss://spark-api.xf-yun.com/v3.5/chat
